<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#03A9F4"
    android:layout_margin="3dp"
    android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="3dp"
    android:background="#FFFFFF">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên Sản Phẩm"
            android:textColor="#FF5722"
            android:layout_weight="1"
            android:fontFamily="@font/cambriab"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/name_ProductMyCart"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="#FF5722"
            android:fontFamily="@font/cambriab"
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giá sản phẩm"
            android:textColor="#000000"
            android:layout_weight="1"
            android:fontFamily="@font/cambriab"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/price_ProductMyCart"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="#000000"
            android:fontFamily="@font/cambriab"
            android:textSize="15dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số Lượng"
            android:textColor="#000000"
            android:layout_weight="1"
            android:fontFamily="@font/cambriab"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/number_ProductMyCart"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="#000000"
            android:fontFamily="@font/cambriab"
            android:textSize="15dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tổng Tiền"
            android:textColor="#000000"
            android:layout_weight="1"
            android:fontFamily="@font/cambriab"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/totalPrice_ProductMyCart"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="#000000"
            android:fontFamily="@font/cambriab"
            android:textSize="15dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Giờ Thêm"
            android:textColor="#000000"
            android:layout_weight="1"
            android:fontFamily="@font/cambriab"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/time_ProductMyCart"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="#000000"
            android:fontFamily="@font/cambriab"
            android:textSize="15dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:orientation="horizontal">
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ngày Thêm"
            android:textColor="#000000"
            android:layout_weight="1"
            android:fontFamily="@font/cambriab"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/day_ProductMyCart"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="#000000"
            android:fontFamily="@font/cambriab"
            android:textSize="15dp"/>

    </LinearLayout>
</LinearLayout>


</LinearLayout>