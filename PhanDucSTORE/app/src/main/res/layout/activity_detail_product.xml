<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    tools:context=".Activity.DetailProductActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar_Detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Chi tiết sản phẩm"/>

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/Image_DetailProducts"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/image1"
        app:riv_corner_radius="10dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/starRate_DetailProducts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:fontFamily="@font/cambriab"
                android:text="5.0 "
                android:textColor="#689F38"
                android:textSize="22dp" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:src="@drawable/star_rate"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/name_DetailProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="#fff"
            android:fontFamily="@font/cambriab"
            android:text="Name"
            android:textColor="#689F38"
            android:textSize="27dp" />

        <TextView
            android:id="@+id/price_DetailProducts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="#fff"
            android:fontFamily="@font/cambriab"
            android:text="Price"
            android:textColor="#689F38"
            android:textSize="23dp" />

        <TextView
            android:id="@+id/descriptions_DetailProducts"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="#fff"
            android:fontFamily="@font/cambriab"
            android:text="Mô Tả"
            android:textColor="#689F38"
            android:textSize="17dp" />
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10"
            android:layout_margin="10dp"
            android:orientation="horizontal"
            android:background="@drawable/edittext_bg">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp"

                android:layout_weight="10">
                <ImageView
                    android:id="@+id/minus_Products"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/tru"/>
                <TextView
                    android:id="@+id/number_Products"
                    android:layout_width="40dp"
                    android:gravity="center"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="25dp"/>

                <ImageView
                    android:id="@+id/add_Products"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/cong"/>
            </LinearLayout>


            <TextView
                android:id="@+id/text_addtoCart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginLeft="10dp"
                android:background="@drawable/edittext_bg"
                android:text="Thêm vào giỏ hàng"
                android:textColor="#FF5722"
                android:fontFamily="@font/cambriab"
                android:textSize="18dp" />

        </LinearLayout>

    </LinearLayout>









</LinearLayout>