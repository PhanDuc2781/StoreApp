<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp"
    android:layout_height="280dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="5dp">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/image_popProducts"
            android:layout_width="270dp"
            android:layout_height="190dp"
            app:riv_corner_radius="10dp"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:src="@drawable/image1"/>
        <TextView
            android:id="@+id/text_namePopular_Products"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên sản phẩm"
            android:textColor="#FF5722"
            android:fontFamily="@font/cambriab"
            android:layout_marginTop="5dp"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/text_Descriptions_PopPro"
            android:layout_width="270dp"
            android:layout_height="20dp"
            android:text="Giới thiệu"
            android:fontFamily="@font/cambriab"
            android:textSize="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:src="@drawable/star_rate"/>

            <TextView
                android:id="@+id/popPro_Star_Rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.9"
                android:fontFamily="@font/cambriab"
                android:textSize="15dp"
                android:textColor="#000000"
                android:layout_marginLeft="3dp"/>

            <TextView
                android:id="@+id/sale_PopPro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sale : 25%"
                android:fontFamily="@font/cambriab"
                android:textColor="#FF5722"
                android:gravity="right"
                android:textSize="16dp"
                android:layout_marginLeft="10dp"/>

        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>